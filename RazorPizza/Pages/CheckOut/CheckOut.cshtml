@page
@model RazorPizza.Pages.CheckOut.CheckOutModel
@{
}

<h1>you order</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" />
        <p>pizza order: @Model.PizzaName</p>
        <p>total cost: $@Model.PizzaPrice</p>
        <br />
        <a class="btn alert-danger mt-1 mx-auto" asp-area="" asp-page="ThankYou">confirm your order</a>
    </div>
</div>